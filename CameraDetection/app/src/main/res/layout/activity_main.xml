<?xml version="1.0" encoding="utf-8"?>
<!-- activity_main.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fridge_background"> <!-- 전체 냉장고 외관 -->

    <!-- 상단칸 -->
    <View
        android:id="@+id/topDoor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@id/middleDoor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 중단칸 -->
    <View
        android:id="@+id/middleDoor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@id/bottomDoor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topDoor" />

    <!-- 하단칸 -->
    <View
        android:id="@+id/bottomDoor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/middleDoor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 내부 이미지  -->
    <ImageView
        android:id="@+id/fridgeInside"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fridge_inside"
        android:visibility="gone"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/insideText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="웹으로 열기"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="#80000000"
        app:layout_constraintTop_toTopOf="@id/fridgeInside"
        app:layout_constraintStart_toStartOf="@id/fridgeInside"
        app:layout_constraintEnd_toEndOf="@id/fridgeInside"
        app:layout_constraintBottom_toBottomOf="@id/fridgeInside"
        app:layout_constraintVertical_bias="0.11" />

    <TextView
        android:id="@+id/insideText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요리 보기"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="#80000000"
        app:layout_constraintTop_toTopOf="@id/fridgeInside"
        app:layout_constraintStart_toStartOf="@id/fridgeInside"
        app:layout_constraintEnd_toEndOf="@id/fridgeInside"
        app:layout_constraintBottom_toBottomOf="@id/fridgeInside"
        app:layout_constraintVertical_bias="0.45" />
</androidx.constraintlayout.widget.ConstraintLayout>
